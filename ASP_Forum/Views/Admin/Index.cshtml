@using ASP_Forum.Models
@model Section

<form asp-action="AddSection" asp-controller="Admin">
    <label asp-for="Name">Название создаваемого раздела</label><br />
    <input type="text" asp-for="Name" /><br />
    <input type="submit" value="Отправить" />
</form>

@if (ViewBag.Error)
{
    <font color="red"><h3>Название раздела не может быть короче 5 символов.</h3></font>
}
<br /><br />
<form asp-action="DeleteSection" asp-controller="Admin">
    <label asp-for="Name">Название раздела для удаления</label><br />
    <input type="text" asp-for="Name" /><br />
    <input type="submit" value="Отправить" />
</form>